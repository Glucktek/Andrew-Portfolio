# Copy this file to .env and fill in secrets
# OpenRouter API key (see https://openrouter.ai/keys)
OPENROUTER_API_KEY=


# Public site settings
PUBLIC_SITE_URL=http://localhost:8080

# Public API base URL used by the frontend
# Use your site origin for same-origin APIs
PUBLIC_API_URL=http://localhost:4321

# Internal API base URL (Docker network-only). Do NOT expose publicly.
INTERNAL_API_URL=http://backend:4321

# Domain your site will be served on
DOMAIN=andrew-gluck.com

# Traefik network name (Coolify usually creates one)
TRAEFIK_NETWORK=traefik

# Traefik TLS certresolver (e.g., letsencrypt)
TLS_RESOLVER=letsencrypt

# Internal secret for proxy-injected protected API endpoints
INTERNAL_API_TOKEN=CHANGE_ME_GENERATE_SECURE

# Public version of internal API token for frontend dev mode
# Should match INTERNAL_API_TOKEN for local development
PUBLIC_INTERNAL_API_TOKEN=CHANGE_ME_GENERATE_SECURE

# Dev mode flag for chat API (set to 'false' to disable dev mode even in development)
PUBLIC_DEV_MODE=true

# Dev-only: bypass internal secret when NODE_ENV != production
# 0 = disabled (default); 1 = enabled
# CAUTION: Never set to 1 in production.
INTERNAL_API_DEV_BYPASS=0
