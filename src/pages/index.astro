---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import HeroGradient from "@components/hero/HeroGradient.astro";
import AboutAlternative from "@components/about/AboutAlternative.astro";
import ProjectShowcaseSideImage from "@components/project-showcase/ProjectShowcaseSideImage.astro";
import TestimonialSwiper from "@components/testimonials/TestimonialSwiper.astro";
import BlogSectionGridDetailed from "@components/blog/BlogSectionGridDetailed.astro";
import ContactSection from "@components/contact/ContactSection.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<BaseLayout title={siteData.title} description={siteData.description}>
  <HeroGradient />
  <AboutAlternative />
  <ProjectShowcaseSideImage />
  <TestimonialSwiper />
  <BlogSectionGridDetailed />
</BaseLayout>
